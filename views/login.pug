extends layout

block content
    .card.card-body
        h1.text-center.mb-3
            i.fas.fa-sign-in-alt
            |   Login
        include ./partials/messages
        form(action='/users/login', method='POST')
            .form-group
                label(for='email') Email
                input#email.form-control(type='email', name='email', placeholder='Enter Email')
            .form-group
                label(for='password') Password
                input#password.form-control(type='password', name='password', placeholder='Enter Password')
            button.btn.btn-block.btn-primary(type='submit', style={'background-color':'#b8daff', 'font-size':'120%', 'color':'black'}) Login
        p.lead.mt-4
            | No Account?
            |
            a(href='/users/register') Register
